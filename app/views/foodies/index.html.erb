<p id="notice"><%= notice %></p>

<h1>Foodies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foodies.each do |foody| %>
      <tr>
        <td><%= foody.name %></td>
        <td><%= foody.content %></td>
        <td><%= foody.image_url %></td>
        <td><%= link_to 'Show', foody %></td>
        <td><%= link_to 'Edit', edit_foody_path(foody) %></td>
        <td><%= link_to 'Destroy', foody, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Foody', new_foody_path %>
